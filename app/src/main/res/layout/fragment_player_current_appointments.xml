<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/playerProfileFragmentCurrentAppointmentsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:text="@string/player_profile_title"
        android:textStyle="italic|bold"
        android:gravity="center"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerProfileFragmentCurrentAppointmentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_below="@+id/playerProfileFragmentCurrentAppointmentsTitle"
        android:layout_above="@+id/playerProfileFragmentCurrentAppointmentsButton"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/playerProfileFragmentCurrentAppointmentsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold|italic"
            android:text="@string/player_profile_book_an_appointment_button_text"
            android:textSize="22sp"
            android:background="@drawable/rounded_corners_blue_background"/>
    </LinearLayout>

</RelativeLayout>